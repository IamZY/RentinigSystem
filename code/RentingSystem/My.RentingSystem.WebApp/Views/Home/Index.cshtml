@{
    ViewBag.Title = "主页";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<My.RentingSystem.Model.domain.HousePicture> rent = ViewBag.houseDic["rent"] as List<My.RentingSystem.Model.domain.HousePicture>;
    List<My.RentingSystem.Model.domain.HousePicture> newHouse = ViewBag.houseDic["new"] as List<My.RentingSystem.Model.domain.HousePicture>;
    //ViewBag.houseDic["second"].Count
    List<My.RentingSystem.Model.domain.HousePicture> second = ViewBag.houseDic["second"] as List<My.RentingSystem.Model.domain.HousePicture>;
}

<div class="content">
    <div class="width1190">
        <h2 class="title">租房 <a href="~/Rent/RentHouse">更多&gt;&gt;</a></h2>
        <div class="index-fang-list"> @*~/HouseImages/1/fang1.jpg*@

            @{
                if (rent.Count == 0)
                {
                    <dl>暂无房源</dl>
                }
                else
                {
                    for (var i = 0; i < rent.Count; i++)
                    {
                        <dl>
                            <dt><a href="@Url.Action("HouseInfo", "Rent", new { id = @ViewBag.houseDic["rent"][i].hid })"><img src="@ViewBag.houseDic["rent"][i].pics[0].path" width="286" height="188" /></a></dt>
                            <dd>
                                <h3><a href="proinfo.html"></a>@ViewBag.houseDic["rent"][i].community</h3>
                                <div class="hui">@ViewBag.houseDic["rent"][i].unitType | @ViewBag.houseDic["rent"][i].area ㎡ | 精装修</div>
                            </dd>
                        </dl>
                    }
                }


            }
            
            <div class="clears"></div>
        </div><!--index-fang-list/-->

        <h2 class="title">新房 <a href="~/Rent/newHouse">更多&gt;&gt;</a></h2>
        <div class="index-fang-list">
            @{
                if (newHouse.Count == 0)
                {
                    <dl>暂无房源</dl>
                }
                else
                {
                    for (var i = 0; i < newHouse.Count; i++)
                    {
                        <dl>
                            <dt><a href="@Url.Action("HouseInfo", "Rent", new { id = @ViewBag.houseDic["new"][i].hid })"><img src="@ViewBag.houseDic["new"][i].pics[0].path" width="286" height="188" /></a></dt>
                            <dd>
                                <h3><a href="proinfo.html"></a>@ViewBag.houseDic["new"][i].community</h3>
                                <div class="hui">@ViewBag.houseDic["new"][i].unitType | @ViewBag.houseDic["new"][i].area ㎡| 精装修</div>
                            </dd>
                        </dl>
                    }
                }


            }

            <div class="clears"></div>
        </div><!--index-fang-list/-->

        <h2 class="title">二手房 <a href="~/Rent/SecondHouse">更多&gt;&gt;</a></h2>
        <div class="index-ershou">
            
            @{
                if (second.Count == 0) { 
                    <dl>暂无房源</dl>
                }
                else
                {
                    <div class="in-er-left">
                        <a href="@Url.Action("HouseInfo", "Rent", new { id = @ViewBag.houseDic["second"][0].hid })"><img src="@ViewBag.houseDic["second"][0].pics[0].path" width="380" height="285" /></a>
                        <div class="in-er-left-text"><strong class="fl">@ViewBag.houseDic["second"][0].houseDesc</strong><strong class="fr alignRight">¥@ViewBag.houseDic["second"][0].price</strong></div>
                    </div><!--in-er-left/-->
                    <div class="in-er-right">
                        @{
                            //var len = @ViewBag.houseDic["second"].length;

                            var len = second.Count <= 4 ? second.Count : 4;

                            if (len == 1)
                            {
                                <dl>暂无房源</dl>
                                <div class="clears"></div>
                            }
                            else
                            {
                                for (var i = 1; i < len; i++)
                                {
                                    <dl>
                                        <dt><a href="@Url.Action("HouseInfo", "Rent", new { id = @ViewBag.houseDic["second"][i].hid })"><img src="@ViewBag.houseDic["second"][i].pics[0].path" width="150" height="115" /></a></dt>
                                        <dd>
                                            <h3><a href="proinfo.html">@ViewBag.houseDic["second"][i].community</a></h3>
                                            <div class="in-er-right-text">
                                                @ViewBag.houseDic["second"][i].houseDesc
                                            </div>
                                            <div class="price">¥<strong>@ViewBag.houseDic["second"][i].price</strong></div>
                                        </dd>
                                        <div class="clears"></div>
                                    </dl>
                                }
                            }


                        }

                        <div class="clears"></div>
                    </div><!--in-er-right/-->
                }
}



            <div class="clears"></div>
        </div><!--index-ershou/-->
    </div><!--width1190/-->
</div><!--content/-->
<div class="xinren">
    <div class="width1190">
        <dl style="background:url(/assets/images/icon1.jpg) left center no-repeat;">
            <dt>承诺</dt>
            <dd>真实可信100%真房源<br />链家承诺，假一赔百</dd>
        </dl>
        <dl style="background:url(/assets/images/icon2.jpg) left center no-repeat;">
            <dt>权威</dt>
            <dd>独家房源 覆盖全城<br />房源信息最权威覆盖最广</dd>
        </dl>
        <dl style="background:url(/assets/images/icon3.jpg) left center no-repeat;">
            <dt>信赖</dt>
            <dd>万名置业顾问 专业服务<br />百万家庭的信赖之选</dd>
        </dl>
        <dl style="background:url(/assets/images/icon4.jpg) left center no-repeat;">
            <dt>安全</dt>
            <dd>安心承诺 保驾护航<br />多重风险防范机制 无后顾之忧</dd>
        </dl>
        <div class="clears"></div>
    </div><!--width1190/-->
</div><!--xinren/-->
